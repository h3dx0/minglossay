<body>
	<div class="container mt-3">
		<div class="card mx-auto col-5">
			<div class="card-body">
				<h4 class="text-center">Register to MiniGlossaryApp</h3>
					{{ form_start(form) }}
					{{ form_row(form.name) }}
					{{ form_row(form.lastName) }}
					{{ form_row(form.username) }}
					{{ form_row(form.email) }}
					{{ form_row(form.plainPassword.first) }}
					{{ form_row(form.plainPassword.second) }}	
					<button type="submit" class="btn block btn btn-success mt-2">Register!</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>



