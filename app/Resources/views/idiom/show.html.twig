{% extends 'base.html.twig' %}

{% block body %}
    <h1>Idiom</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ idiom.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ idiom.text }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ idiom.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('idiom_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('idiom_edit', { 'id': idiom.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
